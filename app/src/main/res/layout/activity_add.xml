<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBack">
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="?android:actionBarSize"
       android:paddingStart="16dp"
       android:paddingEnd="16dp">
       <ImageButton
           android:id="@+id/close_btn_add"
           android:src="@drawable/ic_close"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@color/mainBack"
           android:layout_gravity="start|center_vertical"/>
           <TextView
               android:text="@string/new_alarm"
               android:textColor="@color/textColorMain"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"/>
       <ImageButton
           android:id="@+id/done_btn_add"
           android:background="@color/mainBack"
           android:src="@drawable/ic_done"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="end|center_vertical"/>
   </FrameLayout>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"

        android:numbersTextColor="@color/textColorMain"/>

    <TextView
        android:id="@+id/timeToAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Через 23 ч 59 мин"
        android:textColor="@color/gray"/>

    <FrameLayout
        android:id="@+id/repeat_item_addact"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/repeat"
            android:textColor="@color/textColorMain"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            tools:text="Однократно"
            android:textColor="@color/gray"
            android:textSize="16sp"/>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/melody_item_addact"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/melody"
            android:textColor="@color/textColorMain"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:text="@string/melody_def"
            android:textColor="@color/gray"
            android:textSize="16sp"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/vibrate_on_signal"
            android:textColor="@color/textColorMain"
            android:textSize="16sp"/>
        <Switch
            android:id="@+id/switch_vibrate_addact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/delete_after_triggering"
            android:textColor="@color/textColorMain"
            android:textSize="16sp"/>
        <Switch
            android:id="@+id/switch_delete_aft_trig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/description"
            android:textColor="@color/textColorMain"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/description_pol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:hint="@string/alarm"
            android:textColorHint="@color/gray"
            android:textColor="@color/textColorMain"
            android:textSize="16sp"/>

    </FrameLayout>

</LinearLayout>

